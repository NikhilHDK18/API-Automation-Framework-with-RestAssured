<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="API Automation Suite">
    <groups>
        <run>
            <include name="Create User"/>
            <include name="JWT Auth"/>
            <include name="JWT Fresh Token"/>
            <include name="Product data"/>
            <include name="Product Listing"/>
        </run>
    </groups>

<test name="JWT Tests">
    <classes>
        <class name="tests.auth.JwtAuthFlowTest"/>
        <class name="tests.auth.JwtAuthPositiveTest"/>
        <class name="tests.auth.JwtAuthNegativeTest"/>
        <class name="tests.auth.JwtRefreshTokenTest"/>
    </classes>
</test>

<test name="User Tests">
    <classes>
        <class name="tests.user.CreateUserPositiveTest"/>
        <class name="tests.user.CreateUserNegativeTest"/>
    </classes>
</test>
    <test name="Product Listing">
        <classes>
            <class name="tests.product.ProductListingPositiveTest"/>
            <class name="tests.product.ProductDataValidationTest"/>
            <class name="tests.product.ProductCategoryFilteringTest"/>
            <class name="tests.product.ProductSortingTest"/>
            <class name="tests.product.ProductSecurityTest"/>
            <class name="tests.product.ProductReviewRatingTest"/>
            <class name="tests.performance.ProductPerformanceTest"/>
            <class name="tests.product.ProductNegativeTest"/>
            <class name="tests.product.ProductBusinessRuleTest"/>
        </classes>
    </test>


</suite>
